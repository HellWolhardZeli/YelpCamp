<% include partials/header %>





<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1> Welcome to YelpCamp! </h1>
            <p>View our handpicked campgrounds from all over the world </p>
            <p>
                <a class="btn btn-lg btn-primary" href="/campGrounds/new">Add new camp ground</a>
            </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </div>



    <div class="row">
        <% campGrounds.forEach(function(campGrounds){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= campGrounds.image %>">
                <div class="caption">
                    <h4><%=   campGrounds.name%></h4>
                </div>
            </div>
        </div>
        <% }); %>
    </div>
</div>

<% include partials/footer  %>
