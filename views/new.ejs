<% include partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground</h1>
        <div style="width: 30%; margin: 0 auto">
            <form action="/campGrounds" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="image" placeholder="image URL">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
        </div>


        <a href="/campGrounds" class="btn btn-default btn-md">Go Back</a>
    </div>

</div>



